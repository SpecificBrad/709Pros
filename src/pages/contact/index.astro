---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Breadcrumbs from "../../components/Breadcrumbs.astro";
import { business } from "../../data/business";
import { services } from "../../data/services";

const title = `Get a Free Quote | Contact ${business.name}`;
const description = `Contact ${business.name} for a free, no-obligation estimate on your home improvement project. Call ${business.phone} or fill out our contact form.`;
---

<BaseLayout title={title} description={description}>
  <Breadcrumbs items={[{ label: "Home", href: "/" }, { label: "Contact" }]} />

  <section class="py-16 md:py-20">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Form -->
        <div>
          <h1 class="text-4xl md:text-5xl font-extrabold mb-4">
            Get Your Free Quote
          </h1>
          <p class="text-lg text-gray-600 mb-8 leading-relaxed">
            Tell us about your project and we'll get back to you with a free,
            no-obligation estimate. Most quotes are returned within 24 hours.
          </p>

          <form
            name="contact"
            method="POST"
            data-netlify="true"
            action="/contact/"
            class="space-y-5"
          >
            <input type="hidden" name="form-name" value="contact" />

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-5">
              <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-1">
                  Full Name *
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  autocomplete="name"
                  class="w-full border border-gray-300 rounded-lg px-4 py-3 text-sm focus:ring-2 focus:ring-brand-500 focus:border-brand-500 outline-none transition-colors"
                  placeholder="John Smith"
                />
              </div>
              <div>
                <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">
                  Phone Number *
                </label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  required
                  autocomplete="tel"
                  class="w-full border border-gray-300 rounded-lg px-4 py-3 text-sm focus:ring-2 focus:ring-brand-500 focus:border-brand-500 outline-none transition-colors"
                  placeholder="(709) 555-0199"
                />
              </div>
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
                Email Address
              </label>
              <input
                type="email"
                id="email"
                name="email"
                autocomplete="email"
                class="w-full border border-gray-300 rounded-lg px-4 py-3 text-sm focus:ring-2 focus:ring-brand-500 focus:border-brand-500 outline-none transition-colors"
                placeholder="john@example.com"
              />
            </div>

            <div>
              <label for="service" class="block text-sm font-medium text-gray-700 mb-1">
                Service Needed
              </label>
              <select
                id="service"
                name="service"
                class="w-full border border-gray-300 rounded-lg px-4 py-3 text-sm focus:ring-2 focus:ring-brand-500 focus:border-brand-500 outline-none transition-colors bg-white"
              >
                <option value="">Select a service...</option>
                {services.map((s) => (
                  <option value={s.slug}>{s.name}</option>
                ))}
                <option value="other">Other</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-1">
                Project Details
              </label>
              <textarea
                id="message"
                name="message"
                rows="5"
                class="w-full border border-gray-300 rounded-lg px-4 py-3 text-sm focus:ring-2 focus:ring-brand-500 focus:border-brand-500 outline-none transition-colors resize-y"
                placeholder="Tell us about your project â€” what work do you need done, the approximate size of the area, and any other details that would help us provide an accurate estimate."
              ></textarea>
            </div>

            <button
              type="submit"
              class="w-full bg-brand-600 text-white font-bold px-8 py-4 rounded-lg hover:bg-brand-700 transition-colors text-lg"
            >
              Request Free Estimate
            </button>
            <p class="text-xs text-gray-500 text-center">
              No spam. No obligation. Just a straight-forward estimate for your project.
            </p>
          </form>
        </div>

        <!-- Contact info sidebar -->
        <div class="space-y-8 lg:pt-16">
          <div class="bg-brand-50 border border-brand-100 rounded-xl p-8">
            <h2 class="text-xl font-bold mb-6 text-brand-800">Contact Information</h2>
            <div class="space-y-5">
              <div>
                <h3 class="font-semibold text-sm text-gray-500 uppercase tracking-wide mb-1">Phone</h3>
                <a
                  href={`tel:${business.phone.replace(/[^+\d]/g, "")}`}
                  class="text-lg font-bold text-brand-700 hover:text-brand-800 transition-colors"
                >
                  {business.phone}
                </a>
              </div>
              <div>
                <h3 class="font-semibold text-sm text-gray-500 uppercase tracking-wide mb-1">Email</h3>
                <a
                  href={`mailto:${business.email}`}
                  class="text-lg font-bold text-brand-700 hover:text-brand-800 transition-colors"
                >
                  {business.email}
                </a>
              </div>
              <div>
                <h3 class="font-semibold text-sm text-gray-500 uppercase tracking-wide mb-1">Location</h3>
                <p class="text-gray-700">{business.address.city}, {business.address.province}</p>
                <p class="text-sm text-gray-500">Serving all of Newfoundland</p>
              </div>
              <div>
                <h3 class="font-semibold text-sm text-gray-500 uppercase tracking-wide mb-1">Hours</h3>
                <p class="text-gray-700">{business.hours}</p>
              </div>
            </div>
          </div>

          <div class="bg-gray-50 border border-gray-200 rounded-xl p-8">
            <h2 class="text-xl font-bold mb-4">What to Expect</h2>
            <ol class="space-y-4">
              <li class="flex gap-3">
                <span class="w-7 h-7 bg-brand-600 text-white rounded-full flex items-center justify-center text-sm font-bold shrink-0">1</span>
                <div>
                  <p class="font-semibold">Submit Your Request</p>
                  <p class="text-sm text-gray-600">Fill out the form or give us a call.</p>
                </div>
              </li>
              <li class="flex gap-3">
                <span class="w-7 h-7 bg-brand-600 text-white rounded-full flex items-center justify-center text-sm font-bold shrink-0">2</span>
                <div>
                  <p class="font-semibold">Free Consultation</p>
                  <p class="text-sm text-gray-600">We'll visit your property to assess the project.</p>
                </div>
              </li>
              <li class="flex gap-3">
                <span class="w-7 h-7 bg-brand-600 text-white rounded-full flex items-center justify-center text-sm font-bold shrink-0">3</span>
                <div>
                  <p class="font-semibold">Transparent Quote</p>
                  <p class="text-sm text-gray-600">Receive a detailed, no-obligation estimate.</p>
                </div>
              </li>
              <li class="flex gap-3">
                <span class="w-7 h-7 bg-brand-600 text-white rounded-full flex items-center justify-center text-sm font-bold shrink-0">4</span>
                <div>
                  <p class="font-semibold">We Get to Work</p>
                  <p class="text-sm text-gray-600">Professional service, on time and on budget.</p>
                </div>
              </li>
            </ol>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
