---
import { business } from "../data/business";
import { services } from "../data/services";
import { locations } from "../data/locations";

const currentYear = new Date().getFullYear();
const topLocations = locations.slice(0, 6);
---

<footer class="bg-gray-900 text-gray-300">
  <div class="max-w-7xl mx-auto px-4 py-12">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Company -->
      <div>
        <a href="/" class="text-2xl font-extrabold text-white tracking-tight">
          709<span class="text-accent-400">Pros</span>
        </a>
        <p class="mt-3 text-sm leading-relaxed">
          {business.description}
        </p>
        <div class="mt-4 space-y-1 text-sm">
          <a
            href={`tel:${business.phone.replace(/[^+\d]/g, "")}`}
            class="block hover:text-white transition-colors"
          >
            {business.phone}
          </a>
          <a
            href={`mailto:${business.email}`}
            class="block hover:text-white transition-colors"
          >
            {business.email}
          </a>
        </div>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-white font-semibold mb-3">Our Services</h3>
        <ul class="space-y-2 text-sm">
          {services.map((s) => (
            <li>
              <a
                href={`/services/${s.slug}/`}
                class="hover:text-white transition-colors"
              >
                {s.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Service Areas -->
      <div>
        <h3 class="text-white font-semibold mb-3">Service Areas</h3>
        <ul class="space-y-2 text-sm">
          {topLocations.map((l) => (
            <li>
              <a
                href={`/areas/${l.slug}/`}
                class="hover:text-white transition-colors"
              >
                {l.name}
              </a>
            </li>
          ))}
          <li>
            <a href="/areas/" class="text-accent-400 hover:text-accent-500 transition-colors font-medium">
              View All Areas &rarr;
            </a>
          </li>
        </ul>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-white font-semibold mb-3">Quick Links</h3>
        <ul class="space-y-2 text-sm">
          <li><a href="/" class="hover:text-white transition-colors">Home</a></li>
          <li><a href="/contact/" class="hover:text-white transition-colors">Get a Free Quote</a></li>
          <li><a href="/areas/" class="hover:text-white transition-colors">Service Areas</a></li>
        </ul>
        <div class="mt-6">
          <a
            href="/contact/"
            class="inline-block bg-brand-600 text-white text-sm font-medium px-5 py-2.5 rounded-lg hover:bg-brand-700 transition-colors"
          >
            Request Free Estimate
          </a>
        </div>
      </div>
    </div>

    <div class="mt-10 pt-6 border-t border-gray-800 flex flex-col sm:flex-row justify-between items-center text-xs text-gray-500 gap-2">
      <p>&copy; {currentYear} {business.legalName}. All rights reserved.</p>
      <p>{business.address.city}, {business.address.province} &bull; Serving all of Newfoundland</p>
    </div>
  </div>
</footer>
